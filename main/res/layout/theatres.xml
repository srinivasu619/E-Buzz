<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Theatres.Theatre">
    <Button style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="North" android:id="@+id/button"
        android:onClick="north" android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"/><Button android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:text="South" android:id="@+id/button2"
    android:onClick="south" android:layout_below="@+id/imageView" android:layout_alignEnd="@+id/button"
    android:layout_alignStart="@+id/button"/><Button style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="East/NCR"
    android:id="@+id/button3" android:onClick="east" android:layout_centerVertical="true"
    android:layout_toEndOf="@+id/imageView"/><Button style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="West"
    android:id="@+id/button4" android:layout_alignBottom="@+id/button3" android:layout_alignParentStart="true"
    android:onClick="west"/><ImageView android:layout_width="200dp" android:layout_height="200dp"
    android:id="@+id/imageView" android:src="@drawable/tumblr" android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"/>

</RelativeLayout>